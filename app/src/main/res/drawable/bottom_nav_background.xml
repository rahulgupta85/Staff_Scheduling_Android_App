<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the thin line at the top -->
    <item
        android:left="-2dp"
        android:right="-2dp"
        android:bottom="-2dp">
        <shape>
            <solid android:color="@android:color/transparent" />
            <stroke
                android:width="1dp"
                android:color="#E0E0E0" /> <!-- A light gray color for the line -->
        </shape>
    </item>
    <!-- This is the white background -->
    <item
        android:top="1dp">
        <shape>
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>